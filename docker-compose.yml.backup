version: '3.8'
services:
  postgres:
    image: postgres:13
    container_name: playconnect_postgres
    environment:
      POSTGRES_DB: playconnect
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: password
    ports:
      - "5433:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data
    networks:
      - playconnect-network

  auth-service:
    build: 
      context: ./backend/auth-service
      dockerfile: Dockerfile
    container_name: playconnect_auth
    ports:
      - "3001:3001"
    environment:
      - NODE_ENV=development
      - DATABASE_URL=postgresql://postgres:password@postgres:5432/playconnect
      - JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024
      - FRONTEND_URL=http://localhost:3000
    depends_on:
      - postgres
    networks:
      - playconnect-network

volumes:
  postgres_data:

networks:
  playconnect-network:
    driver: bridge
